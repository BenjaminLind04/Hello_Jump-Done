function init(self)
	msg.post('.', 'acquire_input_focus')
	msg.post('#gameover', 'play_sound')
end


function on_input(self, action_id, action)
	knapp = gui.get_node('spela_igen')

	if gui.pick_node(knapp, action.x, action.y) then
		if action_id == hash('klicka') and action.released then
			msg.post('main:/loader', 'ladda_v√§rld', {till = '#spelet'})
		end
	end
end
